<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Magento\Framework\Logger\Handler\Debug" type="PayPalBR\PayPalPlus\Model\CustomLogger" />
    <preference for="PayPalBR\PayPalPlus\Api\WebHookManagementInterface" type="PayPalBR\PayPalPlus\Model\WebHookManagement"/>
    <preference for="PayPalBR\PayPalPlus\Gateway\Transaction\Base\Config\ConfigInterface" type="PayPalBR\PayPalPlus\Gateway\Transaction\Base\Config\Config"/>
    <preference for="PayPalBR\PayPalPlus\Api\CartItemRequestDataProviderInterface" type="PayPalBR\PayPalPlus\Gateway\Transaction\Base\ResourceGateway\Request\CartItemRequestDataProvider"/>

    <!-- PayPalPlus Adapter -->
	<virtualType name="PayPalPlusRemoteMethodAdapter" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">PayPalBR\PayPalPlus\Model\PayPalPlus::PAYMENT_METHOD_PAYPALPLUS_CODE</argument>
            <argument name="valueHandlerPool" xsi:type="object">PayPalPlusValueHandlerPool</argument>
            <argument name="commandPool" xsi:type="object">PayPalPlusCommandPool</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">PayPalBR\PayPalPlus\Block\Payment\Info\PayPalPlus</argument>
        </arguments>
    </virtualType>

    <!-- Value Handler Pool -->
    <virtualType name="PayPalPlusValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">PayPalPlusConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="PayPalPlusConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">PayPalPlusConfig</argument>
        </arguments>
    </virtualType>

    <virtualType name="PayPalPlusConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">PayPalBR\PayPalPlus\Model\PayPalPlus::PAYMENT_METHOD_PAYPALPLUS_CODE</argument>
        </arguments>
    </virtualType>
    <!-- /Value Handler Pool -->

    <!-- Command Pool -->
    <virtualType name="PayPalPlusCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="initialize" xsi:type="string">PayPalBR\PayPalPlus\Gateway\Transaction\Base\Command\InitializeCommand</item>
                <item name="authorize" xsi:type="string">PayPalPlusAuthorizeCommand</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="PayPalPlusAuthorizeCommand" type="PayPalBR\PayPalPlus\Gateway\Transaction\PayPalPlus\Command\AuthorizeCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">PayPalBR\PayPalPlus\Gateway\Transaction\PayPalPlus\ResourceGateway\Create\RequestBuilder</argument>
            <argument name="responseHandler" xsi:type="object">PayPalPlusAuthorizeCommandResponseHandlerPool</argument>
            <argument name="validator" xsi:type="object">PayPalBR\PayPalPlus\Gateway\Transaction\PayPalPlus\Resource\Create\Response\Validator</argument>
        </arguments>
    </virtualType>

    <virtualType name="PayPalPlusAuthorizeCommandResponseHandlerPool" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="general" xsi:type="string">PayPalBR\PayPalPlus\Gateway\Transaction\PayPalPlus\Resource\Create\Response\GeneralHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- /Command Pool -->
    <!-- /PayPalPlus Adapter -->
</config>
